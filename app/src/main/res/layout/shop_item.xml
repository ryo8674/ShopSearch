<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="144dp"
        android:layout_height="144dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shop_image"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/shop_image"
        android:text="SHOP_NAME"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/shop_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shop_name"
        android:layout_alignStart="@+id/shop_name"
        android:layout_below="@+id/shop_name"
        android:layout_marginBottom="4dp"
        android:text="GENRE" />

    <TextView
        android:id="@+id/shop_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shop_genre"
        android:layout_alignStart="@+id/shop_genre"
        android:layout_below="@+id/shop_genre"
        android:layout_marginBottom="4dp"
        android:text="ACCESS" />
</RelativeLayout>